html {
  font-family: 'Lato', sans-serif;
  font-size: 32px;
  color: #fff;
  text-shadow: 1px 1px black;
  text-align: center;
}

body {
  height: 100vh;
  width: 100vw;
  min-height: 100vh;
  min-width: 100vw;
  overflow: hidden;
  margin: 0;
}

#description {
  display: none;
  font-size: 2rem;
}

.row {
  position: absolute;
  width: 100%;
}

.top {
  font-size: 1.5rem;
  top: 10px;

  .description {
    font-size: .65rem;
  }
}

.middle {
  top: 40%;
}

.bottom {
  font-size: .75rem;
  bottom: 10px;
}

.full-bleed-section {
  .full-bleed {
    z-index: -1;
    position: absolute;
    height: 100%;
    width: 100%;
    overflow: hidden;
    background-image: url(<%= asset_path 'patricia-full-bleed-blurred.png' %>);
    background-size: cover;
  }

}
@media (max-width: 850px){ 
  html {
    font-size: 24px;
  }
}

@media (max-width: 675px){ 
  html {
    font-size: 18px;
  }
}
