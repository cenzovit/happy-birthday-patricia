body {
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  font-family: 'Lato', sans-serif;
  font-size: 32px;
  color: #fff;
  text-shadow: 1px 1px black;
  text-align: center;
  margin: 0;
}

#description {
  display: none;
  font-size: 2em;
}

.row {
  position: absolute;
  width: 100%;
}

.top {
  font-size: 1.5em;
  top: 10px;
}

.middle {
  top: 30%;
}

.bottom {
  font-size: .75em;
  bottom: 10px;
}

.full-bleed-section {
  .full-bleed {
    z-index: -1;
    position: absolute;
    top: -10px;
    height: calc(100% + 20px);
    left: -10px;
    width: calc(100% + 20px);
    overflow: hidden;
    background-image: url(<%= asset_path 'patricia.jpeg' %>);
    background-size: cover;
    filter: blur(5px);
    -webkit-filter: blur(5px);
  }

  .container-fluid {
    z-index: 1;
    text-align: center;
    color: #fff;
  }
}
@media (max-width: 850px){ 
  body {
    font-size: 24px;
  }
}

@media (max-width: 675px){ 
  body {
    font-size: 18px;
  }
}
